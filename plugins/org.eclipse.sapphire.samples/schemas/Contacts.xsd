<?xml version="1.0" encoding="UTF-8"?>

<schema
  xmlns="http://www.w3.org/2001/XMLSchema" 
  targetNamespace="http://xmlns.oracle.com/eclipse/tools/sapphire/samples/contacts"
  xmlns:tns="http://xmlns.oracle.com/eclipse/tools/sapphire/samples/contacts"
  xmlns:a="http://xmlns.oracle.com/eclipse/tools/sapphire/samples/address"
  elementFormDefault="qualified"> 

    <import namespace="http://xmlns.oracle.com/eclipse/tools/sapphire/samples/address" schemaLocation="http://xmlns.oracle.com/eclipse/tools/sapphire/samples/address/1.0" />
    
    <element name="contacts">
        <complexType>
            <sequence>
                <element name="contact" maxOccurs="unbounded" minOccurs="0">
                    <complexType>
                        <sequence>
                            <element name="e-mail" type="string"
                                maxOccurs="1" minOccurs="0">
                            </element>
                            <element name="phone-numbers" maxOccurs="1"
                                minOccurs="0">
                                <complexType>
                                    <sequence>
                                        <element name="phone-number"
                                            maxOccurs="unbounded" minOccurs="0">
                                            <complexType>
                                                <sequence>
                                                    <element name="type"
                                                        type="string" maxOccurs="1"
                                                        minOccurs="0">
                                                    </element>
                                                    <element
                                                        name="number" type="string">
                                                    </element>
                                                </sequence>
                                            </complexType>
                                        </element>
                                    </sequence>
                                </complexType>
                            </element>
                            <element name="web-sites" maxOccurs="1"
                                minOccurs="0">
                                <complexType>
                                    <sequence>
                                        <element name="web-site"
                                            maxOccurs="unbounded" minOccurs="0">
                                            <complexType>
                                                <sequence>
                                                    <element name="url"
                                                        type="string">
                                                    </element>
                                                </sequence>
                                            </complexType>
                                        </element>
                                    </sequence>
                                </complexType>
                            </element>
                            <element name="address" maxOccurs="1"
                                minOccurs="0">
                                <complexType>
                                    <sequence>
                                        <element ref="a:street" />
                                        <element ref="a:city" />
                                        <element ref="a:state" />
                                        <element ref="a:zip" />
                                    </sequence>
                                </complexType>
                            </element>

                            <element name="assistant" maxOccurs="1"
                                minOccurs="0">
                                <complexType>
                                    <sequence>
                                        <element name="name"
                                            type="string">
                                        </element>
                                        <element name="notes"
                                            type="string" maxOccurs="1" minOccurs="0">
                                        </element>
                                        <element name="task"
                                            type="string" maxOccurs="unbounded"
                                            minOccurs="0">
                                        </element>
                                    </sequence>
                                </complexType>
                            </element>
                            <element name="connections" type="string"
                                maxOccurs="1" minOccurs="0">
                            </element>
                        </sequence>
                        <attribute name="name" type="string"></attribute>
                    </complexType>
                </element>
            </sequence>
        </complexType>
    </element>
    
</schema>