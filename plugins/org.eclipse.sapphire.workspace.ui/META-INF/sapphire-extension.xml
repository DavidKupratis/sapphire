<extension xmlns="http://www.eclipse.org/sapphire/xmlns/extension" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <action-handler>
        <action>Sapphire.Browse</action>
        <impl>org.eclipse.sapphire.workspace.ui.WorkspaceRelativePathBrowseActionHandler</impl>
        <id>Sapphire.Browse.WorkspaceRelativePath</id>
        <description>Opens a browse dialog for a relative path to a file or a folder in the current Eclipse Workspace. Activates if the property is a value property and has @WorkspaceRelativePath annotation.</description>
        <condition>org.eclipse.sapphire.workspace.ui.internal.WorkspaceRelativePathBrowseActionHandlerCondition</condition>
    </action-handler>
    <action-handler>
        <action>Sapphire.Browse</action>
        <id>Sapphire.Browse.ProjectRelativePath</id>
        <description>Opens a browse dialog for a relative path to a file or a folder in the current Eclipse project. Activates if the property is a value property and has @ProjectRelativePath annotation.</description>
        <condition>org.eclipse.sapphire.workspace.ui.internal.ProjectRelativePathBrowseActionHandlerCondition</condition>
        <impl>org.eclipse.sapphire.workspace.ui.ProjectRelativePathBrowseActionHandler</impl>
    </action-handler>
    <action-handler>
        <action>Sapphire.Jump</action>
        <impl>org.eclipse.sapphire.workspace.ui.internal.WorkspaceRelativePathJumpActionHandler</impl>
        <id>Sapphire.Jump.WorkspaceRelativePath</id>
        <description>Opens the file specified by a relative path using the associated Eclipse editor. Activates if the property is a value property and has @WorkspaceRelativePath annotation.</description>
        <condition>org.eclipse.sapphire.workspace.ui.internal.WorkspaceRelativePathJumpActionHandlerCondition</condition>
    </action-handler>
    <action-handler>
        <action>Sapphire.Jump</action>
        <impl>org.eclipse.sapphire.workspace.ui.internal.ProjectRelativePathJumpActionHandler</impl>
        <id>Sapphire.Jump.ProjectRelativePath</id>
        <description>Opens the file specified by a relative path using the associated Eclipse editor. Activates if the property is a value property and has @ProjectRelativePath annotation.</description>
        <condition>org.eclipse.sapphire.workspace.ui.internal.ProjectRelativePathJumpActionHandlerCondition</condition>
    </action-handler>
</extension>