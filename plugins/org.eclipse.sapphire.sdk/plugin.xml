<plugin>

  <extension point="org.eclipse.ui.editors">
    <editor
      class="org.eclipse.sapphire.sdk.internal.SapphireUiDefEditor"
      default="true"
      filenames="*.sdef"
      id="org.eclipse.sapphire.sdk.internal.SapphireUiDefEditor"
      name="%saphireUiDefEditor"
      icon="org/eclipse/sapphire/sdk/SapphireFile.png"/>
  </extension>
  
  <extension point="org.eclipse.core.runtime.contentTypes">
    <content-type
      file-extensions="sdef"
      priority="high"
      name="%sapphireUiDef"
      id="sdef"
      base-type="org.eclipse.core.runtime.xml">
    </content-type>
  </extension>
  
  <extension id="builder" name="%builderName" point="org.eclipse.core.resources.builders"> 
    <builder hasNature="false"> 
      <run class="org.eclipse.sapphire.sdk.build.internal.SapphireBuilder"/> 
    </builder> 
  </extension> 
  
  <extension point="org.eclipse.wst.xml.core.catalogContributions">
    <catalogContribution>
      <system
        systemId="http://www.eclipse.org/sapphire/xmlns/extension"
        uri="schemas/SapphireExtension.xsd"/>
    </catalogContribution>
  </extension>
  
  <extension point="org.eclipse.ui.editors">
    <editor
      class="org.eclipse.sapphire.sdk.internal.SapphireExtensionEditor"
      default="true"
      filenames="sapphire-extension.xml"
      id="org.eclipse.sapphire.sdk.internal.SapphireExtensionEditor"
      name="%sapphireExtensionEditorName"
      icon="org/eclipse/sapphire/sdk/SapphireFile.png"/>
  </extension>
  
  <extension point="org.eclipse.ui.editors.templates">
    <include file="templates/modeling/templates.xml" translations="templates/modeling/templates.properties" /> 
  </extension>
  
