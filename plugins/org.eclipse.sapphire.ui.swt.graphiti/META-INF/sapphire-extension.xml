<extension xmlns="http://www.eclipse.org/sapphire/xmlns/extension">
    <action-handler>
        <action>Sapphire.Diagram.Layout</action>
        <impl>org.eclipse.sapphire.ui.swt.graphiti.actions.HorizontalGraphLayoutActionHandler</impl>
        <label>horizontally</label>
        <context>Sapphire.Diagram.Editor</context>
        <condition>org.eclipse.sapphire.ui.swt.graphiti.actions.GraphitiEditorCondition</condition>
    </action-handler>    
    <action-handler>
        <action>Sapphire.Diagram.Layout</action>
        <impl>org.eclipse.sapphire.ui.swt.graphiti.actions.VerticalGraphLayoutActionHandler</impl>
        <label>vertically</label>
        <context>Sapphire.Diagram.Editor</context>
        <condition>org.eclipse.sapphire.ui.swt.graphiti.actions.GraphitiEditorCondition</condition>
    </action-handler>    
    <action-handler-factory>
        <action>Sapphire.Add</action>
        <impl>org.eclipse.sapphire.ui.swt.graphiti.actions.DiagramNodeAddActionHandlerFactory</impl>
        <description>Creates an add action handler for every node type.</description>
        <context>Sapphire.Diagram.Editor</context>
        <condition>org.eclipse.sapphire.ui.swt.graphiti.actions.GraphitiEditorCondition</condition>
    </action-handler-factory>  
</extension>